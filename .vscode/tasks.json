{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Engine",
            "type": "shell",
            "command": "dotnet publish --configuration Release",
            "options": {
                "cwd": "${workspaceFolder}/editorEngine/EditorEngine.Lib"
            },
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Engine And Move",
            "type": "shell",
            "command": "New-Item -ItemType Directory -Force -Path '../../project/Assets/Plugins'; Copy-Item 'bin/Release/netstandard2.1/publish/*.dll' '../../project/Assets/Plugins/'",
            "options": {
                "cwd": "${workspaceFolder}/editorEngine/EditorEngine.Lib"
            },
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "dependsOn": ["Build Engine"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
    ]
}